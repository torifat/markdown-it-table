{
  "name": "markdown-it-table",
  "version": "3.0.0",
  "description": "Plugin for markdown-it markdown parser, adding table with nested block syntax support.",
  "keywords": [
    "markdown-it-plugin",
    "markdown-it",
    "markdown",
    "table"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/torifat/markdown-it-table.git"
  },
  "packageManager": "pnpm@8.6.6",
  "engines": {
    "node": ">12.6"
  },
  "type": "module",
  "exports": {
    "types": "./typings.d.ts",
    "require": "./dist/cjs/index.cjs",
    "import": "./dist/esm/index.mjs",
    "default": "./dist/cjs/index.cjs"
  },
  "license": "MIT",
  "author": "Rifat Nabi <@rifat>",
  "scripts": {
    "test": "vitest",
    "test:ci": "vitest --run",
    "clean": "rm -rf ./dist",
    "format": "prettier --write .",
    "build:esm": "esbuild src/*.js --outdir=dist/esm --format=esm --out-extension:.js=.mjs",
    "build:cjs": "esbuild src/*.js --outdir=dist/cjs --format=cjs --out-extension:.js=.cjs",
    "build": "pnpm run clean && pnpm run build:esm && pnpm run build:cjs",
    "prepublish": "pnpm run build",
    "prepare": "husky install"
  },
  "files": [
    "dist/",
    "typings.d.ts"
  ],
  "devDependencies": {
    "esbuild": "^0.18.11",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "markdown-it": "^13.0.1",
    "markdown-it-testgen": "^0.1.6",
    "prettier": "^3.0.0",
    "vitest": "^0.33.0",
    "@vitest/ui": "^0.33.0"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  }
}
